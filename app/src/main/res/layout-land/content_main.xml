<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.dcasm.calc20.MainActivity"
    tools:showIn="@layout/activity_main">

    <TableLayout
        android:layout_height="match_parent"
        android:layout_below="@+id/entrada"
        android:layout_width="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:text="@string/b7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/btn7"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:textColor="@android:color/black"
                android:layout_weight="1"
                android:textSize="22sp"
                android:onClick="entradaNumeros" />

            <Button
                android:text="@string/b8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/btn8"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:textColor="@android:color/black"
                android:layout_weight="1"
                android:textSize="22sp"
                android:onClick="entradaNumeros" />

            <Button
                android:text="@string/b9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/btn9"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:textColor="@android:color/black"
                android:layout_weight="1"
                android:textSize="22sp"
                android:onClick="entradaNumeros" />

            <Button
                android:text="@string/bDiv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/btnDiv"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:textColor="@android:color/black"
                android:layout_weight="1"
                android:textSize="20sp" />

            <Button
                android:text="@string/bSin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/btnSin"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:textColor="@color/colorAccent"
                android:layout_weight="1"
                android:textSize="16sp"
                android:textAllCaps="false" />

            <Button
                android:text="@string/bC"
                android:id="@+id/btnC"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:textSize="16sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_width="match_parent" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:text="@string/b4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/btn4"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:textColor="@android:color/black"
                android:layout_weight="1"
                android:textSize="22sp"
                android:onClick="entradaNumeros" />

            <Button
                android:text="@string/b5"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/btn5"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:textColor="@android:color/black"
                android:layout_weight="1"
                android:textSize="22sp"
                android:onClick="entradaNumeros" />

            <Button
                android:text="@string/b6"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/btn6"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:textColor="@android:color/black"
                android:layout_weight="1"
                android:textSize="22sp"
                android:onClick="entradaNumeros" />

            <Button
                android:text="@string/bMult"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/btnMult"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:textColor="@android:color/black" />

            <Button
                android:text="@string/bCos"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/btnCos"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:textColor="@color/colorAccent"
                android:layout_weight="1"
                android:textSize="16sp"
                android:textAllCaps="false" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/btnCE"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:textColor="@color/colorAccent"
                android:layout_weight="1"
                android:foregroundGravity="center"
                android:text="@string/bCE"
                android:textSize="16sp"  />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:text="@string/b1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/btn1"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:textColor="@android:color/black"
                android:layout_weight="1"
                android:textSize="22sp"
                android:onClick="entradaNumeros" />

            <Button
                android:text="@string/b2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/btn2"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:textColor="@android:color/black"
                android:layout_weight="1"
                android:textSize="22sp"
                android:onClick="entradaNumeros" />

            <Button
                android:text="@string/b3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/btn3"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:textColor="@android:color/black"
                android:layout_weight="1"
                android:textSize="22sp"
                android:onClick="entradaNumeros" />

            <Button
                android:text="@string/bMinus"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/btnMin"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:textColor="@android:color/black"
                android:layout_weight="1"
                android:textSize="24sp"
                android:textAlignment="center" />

            <Button
                android:text="@string/bTan"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/brnTan"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:textColor="@color/colorAccent"
                android:layout_weight="1"
                android:textSize="16sp"
                android:textAllCaps="false" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/btnMR"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:textColor="@color/colorAccent"
                android:layout_weight="1"
                android:textSize="16sp"
                android:text="@string/bMR" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <Button
                android:text="@string/bComma"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/btnComma"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:textColor="@android:color/black"
                android:layout_weight="1"
                android:textSize="22sp" />

            <Button
                android:text="@string/b0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/btn0"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:textColor="@android:color/black"
                android:layout_weight="1"
                android:textSize="22sp"
                android:onClick="entradaNumeros" />

            <Button
                android:text="@string/bRes"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/btnRes"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:textColor="@color/colorAccent"
                android:layout_weight="1"
                android:textSize="24sp" />

            <Button
                android:text="@string/bPlus"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/btnPlus"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:textColor="@android:color/black"
                android:layout_weight="1"
                android:textSize="20sp" />

            <Button
                android:text="@string/bSig"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/btnSign"
                android:layout_weight="1"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <Button
                android:text="@string/bMC"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/btnMC"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:textColor="@color/colorAccent"
                android:layout_weight="1"
                android:textSize="16sp" />

        </TableRow>

    </TableLayout>

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/salida"
        android:textAlignment="textEnd"
        android:layout_gravity="end"
        android:layout_height="30dp"
        tools:ignore="UnknownId"
        android:textSize="16sp"
        android:enabled="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:ems="10"
        android:id="@+id/entrada"
        android:textAlignment="viewEnd"
        android:layout_gravity="end"
        android:enabled="false"
        android:textSize="21sp"
        android:layout_height="42dp"
        android:textColor="@android:color/black"
        android:layout_below="@+id/salida"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/tvOperador"
        android:layout_toLeftOf="@+id/tvOperador" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="42dp"
        android:layout_below="@+id/salida"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/tvOperador"
        android:layout_above="@+id/tableLayout" />

</RelativeLayout>
